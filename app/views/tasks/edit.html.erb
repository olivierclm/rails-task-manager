<h2>Edit task</h2>

<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>
  <br>
  <div><%= f.check_box :completed %>Completed</div>
  <br>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
<br>
<a><%= link_to "Back to list", tasks_path %></a>
