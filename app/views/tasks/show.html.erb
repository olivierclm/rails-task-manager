<h2><%= @task.title %></h2>
<a><%= link_to "Edit task", edit_path %></a>
<br>
<br>
<div class="details">
  <p><%= @task.details %></p>
</div>
<br>
<br>
<div>
  <input type="checkbox" name="<%= @task.title %>"
    <%= @task.completed ? "checked" : "unchecked" %>>
  <label for=<% @task.title %>> <%= @task.completed ? "This task is completed" : "This task is not completed yet" %></label>
</div>
<br>
<br>
<a><%= link_to "Back to list", tasks_path %></a>
